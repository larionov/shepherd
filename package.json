{
  "name": "@nerdwallet/shepherd",
  "version": "1.8.1",
  "description": "A utility for applying code changes across many repositories",
  "keywords": [
    "codemod",
    "codemods",
    "migration"
  ],
  "homepage": "https://github.com/NerdWalletOSS/shepherd#readme",
  "bugs": {
    "url": "https://github.com/NerdWalletOSS/shepherd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdWalletOSS/shepherd.git"
  },
  "license": "Apache-2.0",
  "author": "Nathan Walters",
  "bin": {
    "shepherd": "./lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "fix-lint": "npm run lint -- --fix",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest --coverage src/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@octokit/rest": "^15.18.1",
    "@types/js-yaml": "^3.12.3",
    "chalk": "^4.0.0",
    "child-process-promise": "^2.2.1",
    "commander": "^5.1.0",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "log-symbols": "^4.0.0",
    "netrc": "^0.1.4",
    "ora": "^4.0.4",
    "preferences": "^2.0.2",
    "simple-git": "^1.132.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/fs-extra": "^8.1.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.150",
    "@types/log-symbols": "^2.0.0",
    "@types/node": "^10.17.19",
    "jest": "^25.4.0",
    "semantic-release": "^17.0.7",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
